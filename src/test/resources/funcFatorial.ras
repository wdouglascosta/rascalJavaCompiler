program funcaoVerificaSeEPar;
  var x, y: integer;

  function isPar(a: integer): integer;
  var aux: integer;
  begin
    aux := a div 2;
    aux := aux * 2;
    if aux < a then
      begin
        isPar := 0;
      end
    else
      begin
        isPar := 1;
      end
  end

begin
read(x);
y := isPar(x);
write(y);
end.